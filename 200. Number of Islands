class Solution {
    private int m;
    private int n;
    public int numIslands(char[][] grid) {
        int result=0;
        m=grid.length;
        if(m==0){
            return 0;
        }
        n=grid[0].length;
        for(int i=0;i<m;i++){
            for(int k=0;k<n;k++){
                if(grid[i][k]=='1'){
                    dfs(grid,i,k);
                    result++;
                }
            }
        }
        return result;
    }
    public void dfs(char[][] grid, int i, int k){
        if(i<0||k<0||i==m||k==n||grid[i][k]=='0'){
            return;
        }
        grid[i][k]='0';
        dfs(grid,i,k+1);
        dfs(grid,i,k-1);
        dfs(grid,i+1,k);
        dfs(grid,i-1,k);
    }
}
